<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/corner_bg"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/marathi"
                android:gravity="center"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:text="lon Aa`I hPta ca ihxab"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_detail"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvmdate"
                android:textSize="18sp"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical|right"
                android:text="jaimndar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_boy"
                        android:drawablePadding="@dimen/_10sdp"
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/marathi"
                        android:text="nav"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="@dimen/_10sdp"
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="xx xxx xxxx"
                        android:textColor="@color/sub_head_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/nav_blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0kun mah lon"
                            android:fontFamily="@font/marathi"
                            android:gravity="right|center_vertical"
                            android:textColor="@color/nav_blue"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_marginTop="@dimen/_3sdp"
                            android:id="@+id/tv_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:gravity="right|center_vertical"
                            android:textColor="@color/nav_blue"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/address"
                android:textSize="16sp"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:text="fgb fjknbkjf kfbjnfgb f jkfkjb fjkfj f "
                android:fontFamily="@font/marathi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:text="jaimndar"
                android:fontFamily="@font/marathi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_boy"
                        android:drawablePadding="@dimen/_10sdp"
                        android:id="@+id/tv_jf_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/marathi"
                        android:text="jaimndar nav"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="@dimen/_10sdp"
                        android:id="@+id/tv_jf_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="xx xxx xxxx"
                        android:textColor="@color/sub_head_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_boy"
                        android:drawablePadding="@dimen/_10sdp"
                        android:id="@+id/tv_js_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/marathi"
                        android:text="jaimndar nav"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:id="@+id/tv_js_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="xx xxx xxxx"
                        android:textColor="@color/sub_head_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/black" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_stament"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="100"
                tools:listitem="@layout/readit_dengi_body_layout" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nodata_nonet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_sad_square" />

        <TextView
            android:id="@+id/tv_err_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>